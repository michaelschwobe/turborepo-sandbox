{
  "name": "cra-app",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf .turbo && rm -rf build && rm -rf coverage && rm -rf node_modules",
    "lint": "yarn run lint:types && yarn run lint:scripts && yarn run lint:styles",
    "lint:types": "tsc -b",
    "lint:scripts": "TIMING=1 eslint src --ext=.js,.jsx,.ts,.tsx --fix",
    "lint:styles": "stylelint 'src/**/*.css' --allow-empty-input --fix --formatter=verbose",
    "format": "prettier '**/*' --write --ignore-unknown",
    "test": "CI=true react-scripts test --ci --clearMocks --coverage --passWithNoTests --watchAll=false",
    "test:watch": "react-scripts test --clearMocks",
    "dev": "PORT=3100 react-scripts start",
    "build": "react-scripts build",
    "start": "react-scripts start"
  },
  "dependencies": {
    "@acme/core": "*",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "@acme/config": "*",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.0",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.40",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "eslint": "^8.17.0",
    "jest": "^28.1.1",
    "prettier": "^2.6.2",
    "stylelint": "^14.8.5",
    "typescript": "^4.7.3",
    "web-vitals": "^2.1.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
