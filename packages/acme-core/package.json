{
  "name": "@acme/core",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "clean": "rm -rf .turbo && rm -rf coverage && rm -rf dist && rm -rf storybook-static && rm -rf node_modules",
    "lint": "yarn run lint:types && yarn run lint:scripts",
    "lint:types": "tsc --noEmit",
    "lint:scripts": "TIMING=1 eslint src --fix",
    "format": "prettier '**/*' --write --ignore-unknown",
    "test": "jest --ci --coverage",
    "test:watch": "jest --watch",
    "dev": "tsup src/index.ts --dts --format=esm,cjs --external=react --watch",
    "storybook": "start-storybook -p 6006",
    "build": "tsup src/index.ts --dts --format=esm,cjs --external=react",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "stop-runaway-react-effects": "^2.0.0"
  },
  "devDependencies": {
    "@acme/config": "*",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "eslint": "^8.8.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "stylelint": "^14.3.0",
    "tsup": "^5.11.13",
    "typescript": "^4.5.5"
  }
}
